<!DOCTYPE html>
<html lang="{{ app.request.locale }}" class="h-100">
<head>
    {% block meta_tags %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ enabel_layout.application_description|trans }}">
    <meta name="theme-color" content="#ffffff">
    {% endblock %}
    <title>{% block title %}{{ enabel_layout.application_name|trans }}{% endblock %}</title>
    {% block favicon %}
    {# Start favicon section #}
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('bundles/enabellayout/favicon/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('bundles/enabellayout/favicon/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('bundles/enabellayout/favicon/favicon-16x16.png') }}">
    <link rel="manifest" href="{{ path('enabel_layout_favicon_webmanifest') }}">
    <link rel="mask-icon" href="{{ asset('bundles/enabellayout/favicon/safari-pinned-tab.svg') }}" color="#5bbad5">
    <link rel="shortcut icon" href="{{ asset('bundles/enabellayout/favicon/favicon.ico') }}">
    <meta name="msapplication-TileColor" content="#2b5797">
    <meta name="msapplication-config" content="{{ path('enabel_layout_favicon_browserconfig') }}">
    <meta name="theme-color" content="#ffffff">
    {# End favicon section #}
    {% endblock %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('enabel') }}
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('enabel') }}
    {% endblock %}
</head>

<body class="d-flex flex-column h-100">
{% block header %}
    {{ include('@EnabelLayout/layout/bs5/_header.html.twig') }}
{% endblock %}

{% block main %}
<main class="flex-shrink-0">
    <div class="container">
        {% block body %}
        {% endblock %}
    </div>
</main>
{% endblock %}

{% block footer %}
    {{ include('@EnabelLayout/layout/bs5/_footer.html.twig') }}
{% endblock %}
</body>
</html>
